html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    title AXN
    link(rel="stylesheet", href="./css/style.css")
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    script(src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js")
  body
    include ./header/header.jade
      
    main#wrapper(role="main")
      div.rslides_container
        ul.rslides
          li: img(src="images/slider/1.jpg", alt="")
          li: img(src="images/slider/2.jpg", alt="")
          li: img(src="images/slider/3.jpg", alt="")
    
    section#series
      h1 Programación
      hr
      include ./genres-nav/genres-nav.jade
      include ./shows-grid/shows-grid.jade
            
    section#hours
      h1 Horarios
      hr
      section.container
        div.left-arrow
        section.calendar
          time <span>Agosto</span> 2015
          article.main
            figure
              img(src="./images/horario/1.jpg")
          article.small
            figure
              img(src="./images/horario/2.jpg")
          article.large
            figure
              img(src="./images/horario/3.jpg")
          article.large
            figure
              img(src="./images/horario/4.jpg")
          article.small
            figure
              img(src="./images/horario/5.jpg")
          article.medium
            figure
              img(src="./images/horario/6.jpg")
          article.medium
            figure
              img(src="./images/horario/7.jpg")    
        div.right-arrow

      
    section#contact
      h1 Contacto
      hr
      section.form-contact
        form
          input(type="text", placeholder="NOMBRE")
          input(type="email", placeholder="EMAIL")
          textarea(placeholder="MENSAJE")
          input(type="submit", value="ENVIAR")
      aside
        section.updates
          h3 Lo más visto
          hr
          article.grid
            figure.effect-jazz
              img(src="./images/contacto/1.jpg" alt="Imagen")
              figcaption
                p.
                  Una mente brillante a favor de la justicia
                a(href="./news.html") Ir
          article.grid
            figure.effect-jazz
              img(src="./images/contacto/2.jpg" alt="Imagen")
              figcaption
                p.
                  Hannibal más sediento de sangre que nunca
                a(href="./news.html") Ir
        article
          figure
            img(src="./images/contacto/3.jpg")
    include ./footer/footer.jade
    script(src="./js/parallax.js")          
    script(src="./js/responsiveslides.js")
    script(src="./js/nav-genres.js")
    script(src="./js/guide-shows.js")
    script.
      $(function(){
          $(".rslides").responsiveSlides({
              auto: true,
              pager: true,
              nav: true,
              speed: 500,
              maxwidth: 1000,
              namespace: "centered-btns"
            });
        })
        
        
  
  
